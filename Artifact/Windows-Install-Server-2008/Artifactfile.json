{
  "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2015-01-01/dtlArtifacts.json",
  "title": "Intaller Sql Server 2008 R2",
  "description": "Télécharger un fichier configuration pour SQL Server 2008 puis installer le binaire",
  "tags": [
    "Windows",
    "SQL",
    "Server",
    "Configuration"
  ],
  "iconUri": "",
  "targetOsType": "Windows",
  "parameters": {
    "urlConfigurationPath": {
      "type": "string",
      "displayName": "Emplacement Url",
      "description": "Addresse URL du fichier de configuration de SQL Server 2008.",
      "defaultValue": ""
    },
    "DownloadPath": {
      "type": "string",
      "displayName": "Emplacement sur le Disque",
      "description": "Emplacement sur le disque de la VM où sera téléchargé le fichier de configuration",
      "defaultValue": ""
    },
    "BinaryPath": {
      "type": "string",
      "displayName": "Emplacement du fichier binaire",
      "description": "Emplacement sur le disque du fichier binaire de SQL Server 2008",
      "defaultValue": ""
    }
  },
  "runCommand": {
    "commandToExecute": "[concat('powershell.exe -ExecutionPolicy bypass -File DownloadAndInstallSql2008Server.ps1', ' -urlConfigurationPath', replace(parameters('urlConfigurationPath'), ' ', '_'), ' -DownloadPath ', parameters('DownloadPath'), ' -BinaryPath ', parameters('BinaryPath'))]"
  }
}
